# --------- BANCO DE DADOS ---------
# Use DATABASE_URL para produção/railway, ou variáveis separadas para uso local
# Exemplo: mysql://usuario:senha@host:porta/database
DATABASE_URL=

# Para configuração local, defina as variáveis abaixo:
DB_TYPE=mysql
DB_USERNAME=root
DB_PASSWORD=suasenha
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gestao_fazendas

# --------- E-MAIL ---------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_app
MAIL_DEFAULT_SENDER=seu_email@gmail.com

# --------- FLASK ---------
FLASK_APP=src/main.py
FLASK_ENV=development  # ou 'production'
FLASK_DEBUG=true
SECRET_KEY=sua_secret_key_aqui

# --------- REDIS/CACHE ---------
REDIS_URL=redis://default:suasenha@redis.railway.internal:6379

# --------- UPLOADS ---------
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# --------- CELERY (tarefas assíncronas, se usar) ---------
CELERY_BROKER_URL=redis://default:suasenha@redis.railway.internal:6379/0
CELERY_RESULT_BACKEND=redis://default:suasenha@redis.railway.internal:6379/0

# --------- OUTRAS CONFIGS ---------
# LOG_LEVEL=INFO
# CACHE_TIMEOUT=300

# --------- BACKUP (apenas comandos de referência, não variáveis) ---------
# mysqldump -u root -p'SUA_SENHA' -h seu_host -P sua_porta seu_db > backup.sql